@model IEnumerable<BO.Barang>
@{
    ViewBag.Title = "Daftar Barang";
}

<h2>Daftar Barang</h2>

<br />

@Html.ActionLink("Tambah Barang", "Create", "Barang")
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kode Barang</th>
            <th>Nama Barang</th>
            <th>Nama Kategori</th>
            <th>Harga Beli</th>
            <th>Harga Jual</th>
            <th>Stok</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brg in Model)
        {
            <tr>
                <td>@brg.KodeBarang</td>
                <td>@brg.NamaBarang</td>
                <td>@brg.Kategori.NamaKategori</td>
                <td>@brg.HargaBeli</td>
                <td>@brg.HargaJual</td>
                <td>@brg.Stok</td>
                <td>@Html.ActionLink("edit", "Edit", "Kategori", new { id = brg.KodeBarang }, null)</td>
                <td><a href="/Kategori/Delete/@brg.KodeBarang">delete</a></td>
            </tr>
        }
    </tbody>
</table>