@model BO.Kategori

@{
    ViewBag.Title = "Edit Kategori";
}

<h2>Edit Kategori</h2>
<br />
@using (Html.BeginForm("Edit", "Kategori", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="KategoriID" class="control-label col-md-2">Kategori ID :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriID,
                    new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            <label for="NamaKategori" class="control-label col-md-2">Nama Kategori :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NamaKategori, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NamaKategori, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    
