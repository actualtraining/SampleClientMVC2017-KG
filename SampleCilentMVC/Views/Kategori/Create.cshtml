@model BO.Kategori
@{
    ViewBag.Title = "Create";
}

<h2>Insert Kategori</h2>
<br />
@using (Html.BeginForm("Create", "Kategori", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="NamaKategori" class="control-label col-md-2">Nama Kategori :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NamaKategori, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NamaKategori, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

