@model IEnumerable<BO.Kategori>
@{
    ViewBag.Title = "Daftar Kategori";
}

<h2>Daftar Kategori</h2>
<br />

@Html.ActionLink("Tambah Kategori","Create","Kategori")
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Nama Kategori</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var kat in Model)
        {
            <tr>
                <td>@kat.KategoriID</td>
                <td>@kat.NamaKategori</td>
                <td>@Html.ActionLink("edit","Edit","Kategori",new { id=kat.KategoriID },null)</td>
                <td><a href="/Kategori/Delete/@kat.KategoriID">delete</a></td>
            </tr>
        }
    </tbody>
</table>

